<div class="row">
  <div class="col-4">
    <div class="card" style="width: 18rem;">
    <%= image_tag @party.image.url, class:"card-img-top" %>
      <div class="card-body">
      <h5 class="card-title"> <%= @party.name %> </h5>
      <h6 class="card-subtitle mb-2 text-muted"> <%= @party.begin.strftime("%d/%m/%Y") %> ~ <%= @party.end.strftime("%d/%m/%Y") %> </h6>
      <h6 class="card-subtitle mb-2 text-muted"> lorem ipsum dolor banana delta alpha bravo celta</h6>
      <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  </div>

  <div class="col-8">
    <%= form_tag add_student_parties_path(@party), :method => :post do %>
        <%= email_field_tag :email %>
        <%= hidden_field_tag :party_id, @party.id %>
        <%= submit_tag "Adicionar" %>
    <% end %>
    <div class="card">
        <div class="card-body">
            <!-- ALUNOS -->
            <% @party.users.each do |student| %>
                <div class="card">
                  <div class="card-body">
                    This is some text within a card body
                  </div>
                </div>
            <% end %>
        </div>
    </div>
  </div>
</div>